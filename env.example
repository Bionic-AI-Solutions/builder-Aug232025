# BuilderAI Local Development Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://builderai:builderai123@localhost:5432/builderai_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=builderai_dev
DB_USER=builderai
DB_PASSWORD=builderai123

# Redis Configuration (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO S3 Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=builderai-files
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true
S3_USE_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# LLM Configuration
# OpenAI Models
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Models
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google Models
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-pro
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com

# Local LLM Models (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=llama2,llama2:13b,codellama,mistral,vicuna,neural-chat

# Local LLM Models (LM Studio)
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODELS=llama-2-7b,llama-2-13b,mistral-7b

# Local LLM Models (vLLM)
VLLM_BASE_URL=http://localhost:8000
VLLM_MODELS=llama2-7b,mistral-7b,codellama-7b

# Cohere Models
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=command-r-plus
COHERE_BASE_URL=https://api.cohere.com

# Hugging Face Models
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODELS=meta-llama/Llama-2-7b-chat-hf,mistralai/Mistral-7B-Instruct-v0.2
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co

# Azure OpenAI Models
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# AWS Bedrock Models
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BEDROCK_MODELS=anthropic.claude-3-sonnet-20240229-v1:0,amazon.titan-text-express-v1

# Default LLM Provider
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
OAUTH_CALLBACK_URL=http://localhost:8080/api/auth/oauth/callback

# MCP Server Configuration
MCP_SERVER_TIMEOUT=30000
MCP_SERVER_RETRY_ATTEMPTS=3

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,json,csv,xlsx
UPLOAD_PATH=/uploads

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000

# Notification Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_FROM=noreply@builderai.com

# Security Configuration
CORS_ORIGIN=http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Configuration
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
